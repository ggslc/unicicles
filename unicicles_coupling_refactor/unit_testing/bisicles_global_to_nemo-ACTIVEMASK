KG_DIR=kg_ioput
TEST_DIR=output
ISCRIPDIR=../active/python3

export PYTHONPATH=$PYTHONPATH:$ISCRIPDIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/work/n02/n02/marc/python/software/unicicles-env_230620/lib

NEMO_REF_CALVING=$KG_DIR/ecalving_v2.2x.nc
