python $ISCRIPDIR/bisicles_global_to_nemo.py --input_berg_global ${NEMO_REF_CALVING} --output_berg_global ${UNICICLES_CALVING_OUT}.nc --input_berg_GrIS ${UNICICLES_CALVING_IN}-GrIS.nc --input_berg_AIS ${UNICICLES_CALVING_IN}-AIS.nc  --hdf5_input ${POSTICE_ICE_PLOT}-AIS.hdf5 --nc_output ${UNICICLES_BATHY_OUT}.nc --nc_template ${NEMO_REF_BATHY}
