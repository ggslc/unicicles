KG_DIR=../kg_ioput
TEST_DIR=output/
ISCRIPDIR=../LINK_TO_OLD_SCRIPTS
LDLIBPATH=../LINK_TO_LDLIBRARY

export PYTHONPATH=$PYTHONPATH:$ISCRIPDIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$LDLIBPATH


POSTICE_ICE_PLOT_HDF=$KG_DIR/bisicles_db851c_19850101_plot
ANCIL_GLOBE30=$KG_DIR/qrparm.orog_GLOBE30

PRECAP_ICEANCIL=$TEST_DIR/bisicles_db851c_19850101_orog-hi
UNICICLES_CALVING_OUT=$TEST_DIR/bisicles_db851c_P1Y_19840101-19850101_calving

UNICICLES_PERIOD_SECONDS=31104000

python ./bike_regrid_hdf5.py --hdf5_input ${POSTICE_ICE_PLOT_HDF}-GrIS.hdf5 --um_input ${ANCIL_GLOBE30}-GrIS --um_output ${PRECAP_ICEANCIL}-GrIS --hdf5_output ${UNICICLES_CALVING_OUT}-GrIS.hdf5 --nc_output ${UNICICLES_CALVING_OUT}-GrIS.nc --coupling_period $UNICICLES_PERIOD_SECONDS --region GrIS

python ./bike_regrid_hdf5.py --hdf5_input ${POSTICE_ICE_PLOT_HDF}-AIS.hdf5 --um_input ${ANCIL_GLOBE30}-AIS --um_output ${PRECAP_ICEANCIL}-AIS --hdf5_output ${UNICICLES_CALVING_OUT}-AIS.hdf5 --nc_output ${UNICICLES_CALVING_OUT}-AIS.nc --coupling_period $UNICICLES_PERIOD_SECONDS --region AIS

