KG_DIR=kg_ioput
TEST_DIR=output
ISCRIPDIR=LINK_TO_REFACTOR_SCRIPTS
LDLIBPATH=LINK_TO_LDLIBRARY

export PYTHONPATH=$PYTHONPATH:$ISCRIPDIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$LDLIBPATH


UM_DUMP_IN=$KG_DIR/db851a.da19850101_00
POSTICE_COUPLE_UM=$KG_DIR/atmos_db851c_P1Y_19840101-19850101_icecouple.nc

UM_DUMP_OUT=$TEST_DIR/db851a.da19850101_00-ice

UNICICLES_PERIOD_SECONDS=31104000

python $ISCRIPDIR/um_reset_icesnowpack_no_icesheet_coupling.py --um_input $UM_DUMP_IN --toice_input $POSTICE_COUPLE_UM --um_output $UM_DUMP_OUT --coupling_period $UNICICLES_PERIOD_SECONDS
