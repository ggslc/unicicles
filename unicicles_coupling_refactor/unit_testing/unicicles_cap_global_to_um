python $ISCRIPDIR/unicicles_cap_global_to_um.py --output_orog_global ${UMRES_ICE_ANCIL_OUT} --input_orog_GrIS ${UMRES_ICE_ANCIL_IN}-GrIS --input_orog_AIS ${UMRES_ICE_ANCIL_IN}-AIS --input_icecouple_GrIS ${POSTICE_COUPLE_ICE_IN}-GrIS.nc --input_icecouple_AIS ${POSTICE_COUPLE_ICE_IN}-AIS.nc --output_icecouple_global_out ${POSTICE_COUPLE_ICE_OUT}.nc --um_input ${UM_DUMP_IN} --um_ref_input ${DUMP_FOR_UM} --toice_input ${POSTICE_COUPLE_UM} --um_output ${UM_DUMP_OUT} --coupling_period ${UNICICLES_PERIOD_SECONDS}
